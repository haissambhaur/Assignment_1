<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".screen1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="115dp"
        android:layout_marginStart="10dp"
        android:elevation="5dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10/hr"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="115dp"
        android:layout_marginStart="120dp"
        android:elevation="5dp"
        android:textColor="#EF8305"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Islamabad"
        android:textSize="13dp"
        android:layout_marginTop="141dp"
        android:layout_marginStart="30dp"
        android:elevation="5dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7th Mar"
        android:textSize="13dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="130dp"
        android:textColor="@color/black"
        android:elevation="5dp"/>
    <View
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:background="@drawable/item_grey_rectangle"
        android:layout_marginTop="1dp"
        android:layout_marginStart="1dp"
        />
    <View
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/item_lightgrey_rectangle"
        android:layout_marginTop="115dp"
        android:layout_marginStart="1dp"
        android:elevation="4dp"
        />
    <View
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/item_sqr_grey_rec"
        android:layout_marginTop="115dp"
        android:layout_marginStart="1dp"
        android:elevation="4dp"
        />

</RelativeLayout>