<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".screen1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:id="@+id/Logintxt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="70dp"
        android:background="#CCCCCC" /> <!-- Divider line -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Reason for Reporting"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="375dp"
        android:layout_height="68dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="120dp"
        android:paddingLeft="15dp"
        android:paddingBottom="30dp"
        android:hint="Enter reason here"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_text_background" />

    <androidx.appcompat.widget.AppCompatButton
        android:textAllCaps="false"
        android:text="Submit Report"
        android:textSize="18dp"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="660dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_background_orange"/>
    <View
        android:id="@+id/back_btn_sc14"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="22dp"
        android:layout_marginStart="5dp"/>
</RelativeLayout>